extends layout.pug

block content

	if currentUser
		.container.text-center
			form(action='/feedback', method='post')
				.form-group.row.justify-content-center
					label(for="feedback") What do you think?
						textarea.form-control(type='text', name='feedback')
				button(type='submit').btn.btn-primary.mb-4 submit



	.container
		table.table.tabled-hover.table-md
				each item in feedbackData
					tr
						td #{item.user}
						td #{item.feedback}
						td #{item.updatedAt}
						if item.userId === currentUser
							td
								a(href="/feedback/" + item._id)
									button.btn.btn-danger.btn-sm Delete
							td
								a(href="/feedback/edit/" + item._id)
									button.btn.btn-warning.btn-sm Edit
